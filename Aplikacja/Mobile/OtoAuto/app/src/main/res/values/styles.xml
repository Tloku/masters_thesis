<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OfferTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OfferCardInfo">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginEnd">6dp</item>
    </style>

    <style name="OfferCardPrice">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textColor">@color/priceTagColor</item>
    </style>

    <style name="OfferCardCurrency">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textColor">@color/priceTagColor</item>
    </style>

    <style name="LinearLayoutGray">
        <item name="android:background">@color/lightGray</item>
    </style>

    <style name="LinearLayoutRow">
        <item name="android:paddingVertical">3dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BlueTextView">
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavyTextView">
        <item name="android:textColor">@color/navy</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListStyles">
        <item name="android:paddingVertical">15dp</item>
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="FooterLayout">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@color/gray</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="minMaxEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/lightGray</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="spinner">
        <item name="android:background">@color/lightGray</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>
</resources>